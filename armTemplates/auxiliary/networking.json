{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "companyPrefix": {
            "type": "string",
            "maxLength": 5
        },
        "locationPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "environmentPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "resourceGroupPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "vngPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "vnetPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "publicIpPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "azFwPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "storagePrefix": {
            "type": "string",
            "maxLength": 3
        },
        "udrPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "nsgPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "environmentTag": {
            "type": "string"
        },
        "ownerTag": {
            "type": "string"
        },
        "addressPrefix": {
            "type": "string",
            "metadata": {
                "displayName": "addressPrefix",
                "description": "Address prefix of the Platform Landing Zone"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "displayName": "location",
                "description": "Location of the Platform Landing Zone"
            },
            "defaultValue": "[deployment().location]"
        },
        "enableHub": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableAzFw": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableVpnGw": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "No"
        },
        "enableErGw": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "No"
        },
        "enableAppGw": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "No"
        },
        "enableMgmt": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "No"
        },
        "platformLzSubscriptionId": {
            "type": "string",
            "defaultValue": "",
            "maxLength": 36
        },
        "vpnGwType": {
            "type": "string",
            "allowedValues": [
                "PolicyBased",
                "RouteBased"
            ],
            "defaultValue": "RouteBased"
        },
        "subnetMaskForAzFw": {
            "type": "string",
            "defaultValue": ""
        },
        "subnetMaskForAppGw": {
            "type": "string",
            "defaultValue": ""
        },
        "subnetMaskForGw": {
            "type": "string",
            "defaultValue": ""
        },
        "subnetMaskForMgmt": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "namingPrefix": "[concat(parameters('companyPrefix'), '-', parameters('locationPrefix'), '-', parameters('environmentPrefix'))]",
        "deploymentName": "[take(concat(deployment().name, '-hubspoke'), 64)]",
        "storageNamingPrefix": "[concat(parameters('companyPrefix'), parameters('locationPrefix'), parameters('environmentPrefix'))]",
        "resourceGroupName": "[toLower(concat(parameters('companyPrefix'), '-', parameters('environmentPrefix'), '-', parameters('resourceGroupPrefix'), '-network'))]",
        "Cidr": "[substring(parameters('addressPrefix'),0,sub(length(parameters('addressPrefix')), 3))]",
        "azVnet": {
       
            "azVnetName": "[toLower(concat(variables('namingPrefix'), '-', parameters('vnetPrefix'), '-', variables('Cidr')))]"
        },
        "azRouteTable": {
            "azRouteTableName": "[toLower(concat(variables('namingPrefix'), '-', parameters('udrPrefix'), '-001'))]",
            "azRouteTableId": "[concat('/subscriptions/', parameters('platformLzSubscriptionId'), '/resourceGroups/', variables('resourceGroupName'),'/providers/Microsoft.Network/routeTables/', variables('azRouteTable').azRouteTableName)]",
            "azRouteName": "[toLower(concat('subnet-to-', variables('azFw').azFwName))]"
        },
        "azNsg": {
            "azNsgName": "[toLower(concat(variables('namingPrefix'), '-', parameters('nsgPrefix'), '-001'))]",
            "azNsgId": "[concat('/subscriptions/', parameters('platformLzSubscriptionId'), '/resourceGroups/', variables('resourceGroupName'),'/providers/Microsoft.Network/networkSecurityGroups/', variables('azNsg').azNsgName)]"
        },
        "azVpnGw": {
            "azVpnGwName": "[toLower(concat(variables('namingPrefix'), '-', parameters('vngPrefix'), '-vpn'))]",
            "azVpnGwIpName": "[toLower(concat(variables('namingPrefix'), '-', parameters('publicIpPrefix'), '-001'))]",
            "azVpnGwSubnetId": "[concat('/subscriptions/', parameters('platformLzSubscriptionId'), '/resourceGroups/', variables('resourceGroupName'),'/providers/Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName, '/subnets/GatewaySubnet')]",
            "azVpnGwPipId": "[concat('/subscriptions/', parameters('platformLzSubscriptionId'), '/resourceGroups/', variables('resourceGroupName'), '/providers/Microsoft.Network/publicIPAddresses/', variables('azVpnGw').azVpnGwIpName)]"
        },
        "azErGw": {
            "azErGwName": "[toLower(concat(variables('namingPrefix'), '-', parameters('vngPrefix'), '-er'))]",
            "azErGwIpName": "[toLower(concat(variables('namingPrefix'), '-', parameters('publicIpPrefix'), '-002'))]",
            "azErGwSubnetId": "[concat('/subscriptions/', parameters('platformLzSubscriptionId'), '/resourceGroups/', variables('resourceGroupName'),'/providers/Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName, '/subnets/GatewaySubnet')]",
            "azErGwPipId": "[concat('/subscriptions/', parameters('platformLzSubscriptionId'), '/resourceGroups/', variables('resourceGroupName'), '/providers/Microsoft.Network/publicIPAddresses/', variables('azErGw').azErGwIpName)]"
        },
        "azFw": {
            "azFwName": "[toLower(concat(variables('namingPrefix'), '-', parameters('azFwPrefix'), '-001'))]",
            "azFwSubnetId": "[concat('/subscriptions/', parameters('platformLzSubscriptionId'), '/resourceGroups/', variables('resourceGroupName'),'/providers/Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName, '/subnets/AzureFirewallSubnet')]",
            "azFwIpName": "[toLower(concat(variables('namingPrefix'), '-', parameters('publicIpPrefix'), '-003'))]",
            "azFwPipId": "[concat('/subscriptions/', parameters('platformLzSubscriptionId'), '/resourceGroups/', variables('resourceGroupName'), '/providers/Microsoft.Network/publicIPAddresses/', variables('azFw').azFwIpName)]"
        },
        "tags": {
            "environment": "[parameters('environmentTag')]",
            "owner": "[parameters('ownerTag')]"
        },
        "storage": {
            "name": "[take(toLower(concat(variables('storageNamingPrefix'), parameters('storagePrefix'), guid(parameters('companyPrefix')))), 20)]",
            "sku": "Standard_LRS",
            "kind": "StorageV2",
            "use": "Diagnostics",
            "httpsOnly": true
        }
    },
    "resources": [
        {
            "condition": "[and(equals(parameters('enableHub'), 'Yes'), not(empty(parameters('platformLzSubscriptionId'))))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "networking",
            "location": "[deployment().location]",
            "subscriptionId": "[parameters('platformLzSubscriptionId')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "2020-06-01",
                            "location": "[deployment().location]",
                            "name": "[variables('resourceGroupName')]",
                            "tags": {
                                "environment": "[variables('tags').environment]",
                                "owner": "[variables('tags').owner]"
                            },
                            "properties": {}
                        },
                        {
                            "type": "Microsoft.Resources/deployments",
                            "apiVersion": "2019-10-01",
                            "name": "[variables('deploymentName')]",
                            "resourceGroup": "[variables('resourceGroupName')]",
                            "dependsOn": [
                                "[concat('Microsoft.Resources/resourceGroups/', variables('resourceGroupName'))]"
                            ],
                            "properties": {
                                "mode": "Incremental",
                                "template": {
                                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                                    "contentVersion": "1.0.0.0",
                                    "parameters": {},
                                    "resources": [
                                        {
                                            "type": "Microsoft.Authorization/locks",
                                            "apiVersion": "2017-04-01",
                                            "name": "ResourceGroup-DontDelete",
                                            "properties": {
                                                "level": "CanNotDelete",
                                                "notes": "Prevent deletion of the resourceGroup"
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('enableMgmt'), 'Yes'), not(empty(parameters('subnetMaskForMgmt'))))]",
                                            "type": "Microsoft.Network/networkSecurityGroups",
                                            "apiVersion": "2020-05-01",
                                            "name": "variables('azNsg').azNsgName)]",
                                            "location": "[parameters('location')]",
                                            "properties": {
                                                "securityRules": [
                                                    {
                                                        "name": "rdp_rule",
                                                        "properties": {
                                                            "description": "Allow RDP",
                                                            "protocol": "Tcp",
                                                            "sourcePortRange": "*",
                                                            "destinationPortRange": "3389",
                                                            "sourceAddressPrefix": "Internet",
                                                            "destinationAddressPrefix": "*",
                                                            "access": "Allow",
                                                            "priority": 100,
                                                            "direction": "Inbound"
                                                        }
                                                    }
                                                ]
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('enableMgmt'), 'Yes'), not(empty(parameters('subnetMaskForMgmt'))))]",
                                            "type": "Microsoft.Network/routeTables",
                                            "apiVersion": "2020-05-01",
                                            "name": "[variables('azRouteTable').azRouteTableName]",
                                            "location": "[parameters('location')]",
                                            "properties": {
                                                "routes": [
                                                    {
                                                        "name": "[variables('azRouteTable').azRouteName]",
                                                        "properties": {
                                                            "addressPrefix": "0.0.0.0/0",
                                                            "nextHopType": "VirtualAppliance",
                                                            "nextHopIpAddress": "192.168.0.1"
                                                        }
                                                    }
                                                ]
                                            }
                                        },
                                        {
                                            "name": "[variables('azVnet').azVnetName]",
                                            "type": "Microsoft.Network/virtualNetworks",
                                            "apiVersion": "2020-05-01",
                                            "location": "[deployment().location]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/routeTables/', variables('azRouteTable').azRouteTableName)]",
                                                "[concat('Microsoft.Network/networkSecurityGroups/', variables('azNsg').azNsgName)]"
                                            ],
                                            "properties": {
                                                "addressSpace": {
                                                    "addressPrefixes": [
                                                        "[parameters('addressPrefix')]"
                                                    ]
                                                }
                                            },
                                            "resources": [
                                            ]
                                        },
                                        {
                                            "type": "Microsoft.Storage/storageAccounts",
                                            "apiVersion": "2019-06-01",
                                            "name": "[variables('storage').name]",
                                            "location": "[deployment().location]",
                                            "sku": {
                                                "name": "[variables('storage').sku]"
                                            },
                                            "tags": {
                                                "storageSKU": "[variables('storage').sku]",
                                                "storageUse": "[variables('storage').use]"
                                            },
                                            "kind": "[variables('storage').kind]",
                                            "properties": {
                                                "supportsHttpsTrafficOnly": "[variables('storage').httpsOnly]"
                                            }
                                        },


                                        {
                                            "condition": "[and(equals(parameters('enableAzFw'), 'Yes'), not(empty(parameters('subnetMaskForAzFw'))))]",
                                            "type": "Microsoft.Network/virtualNetworks/subnets",
                                            "apiVersion": "2020-05-01",
                                            "name": "[concat(variables('azVnet').azVnetName, '/', 'AzureFirewallSubnet')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName)]"
                                            ],
                                            "properties": {
                                                "addressPrefix": "[parameters('subnetMaskForAzFw')]"
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('enableAppGw'), 'Yes'), not(empty(parameters('subnetMaskForAppGw'))))]",
                                            "type": "Microsoft.Network/virtualNetworks/subnets",
                                            "apiVersion": "2020-05-01",
                                            "name": "[concat(variables('azVnet').azVnetName, '/', 'AppGateway')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName)]"
                                            ],
                                            "properties": {
                                                "addressPrefix": "[parameters('subnetMaskForAppGw')]"
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('enableMgmt'), 'Yes'), not(empty(parameters('subnetMaskForMgmt'))))]",
                                            "type": "Microsoft.Network/virtualNetworks/subnets",
                                            "apiVersion": "2020-05-01",
                                            "name": "[concat(variables('azVnet').azVnetName, '/', 'Management')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName)]"
                                            ],
                                            "properties": {
                                                "addressPrefix": "[parameters('subnetMaskForMgmt')]",
                                                "routeTable": {
                                                    "id": "[variables('azRouteTable').azRouteTableId]"
                                                },
                                                "networkSecurityGroup": {
                                                    "id": "[variables('azNsg').azNsgId]"
                                                }
                                            }
                                        },
                                        {
                                            "condition": "[and(or(equals(parameters('enableVpnGw'), 'Yes'), equals(parameters('enableErGw'), 'Yes')), not(empty(parameters('subnetMaskForGw'))))]",
                                            "type": "Microsoft.Network/virtualNetworks/subnets",
                                            "apiVersion": "2020-05-01",
                                            "name": "[concat(variables('azVnet').azVnetName, '/', 'GatewaySubnet')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName)]"
                                            ],
                                            "properties": {
                                                "addressPrefix": "[parameters('subnetMaskForGw')]"
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('enableVpnGw'), 'Yes'), not(empty(parameters('subnetMaskForGw'))))]",
                                            "apiVersion": "2020-05-01",
                                            "type": "Microsoft.Network/publicIpAddresses",
                                            "location": "[parameters('location')]",
                                            "name": "[variables('azVpnGw').azVpnGwIpName]",
                                            "properties": {
                                                "publicIPAllocationMethod": "Dynamic"
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('enableVpnGw'), 'Yes'), not(empty(parameters('subnetMaskForGw'))))]",
                                            "apiVersion": "2020-05-01",
                                            "name": "[variables('azVpnGw').azVpnGwName]",
                                            "type": "Microsoft.Network/virtualNetworkGateways",
                                            "location": "[parameters('location')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/publicIPAddresses/', variables('azVpnGw').azVpnGwIpName)]",
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName, '/subnets/GatewaySubnet')]"
                                            ],
                                            "properties": {
                                                "gatewayType": "Vpn",
                                                "vpnType": "[parameters('vpnGwType')]",
                                                "ipConfigurations": [
                                                    {
                                                        "name": "default",
                                                        "properties": {
                                                            "privateIPAllocationMethod": "Dynamic",
                                                            "subnet": {
                                                                "id": "[variables('azVpnGw').azVpnGwSubnetId]"
                                                            },
                                                            "publicIpAddress": {
                                                                "id": "[variables('azVpnGw').azVpnGwPipId]"
                                                            }
                                                        }
                                                    }
                                                ],
                                                "sku": {
                                                    "name": "VpnGw1",
                                                    "tier": "VpnGw1"
                                                }
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('enableErGw'), 'Yes'), not(empty(parameters('subnetMaskForGw'))))]",
                                            "apiVersion": "2020-05-01",
                                            "type": "Microsoft.Network/publicIpAddresses",
                                            "location": "[parameters('location')]",
                                            "name": "[variables('azErGw').azErGwIpName]",
                                            "properties": {
                                                "publicIPAllocationMethod": "Dynamic"
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('enableErGw'), 'Yes'), not(empty(parameters('subnetMaskForGw'))))]",
                                            "apiVersion": "2020-05-01",
                                            "name": "[variables('azErGw').azErGwName]",
                                            "type": "Microsoft.Network/virtualNetworkGateways",
                                            "location": "[parameters('location')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/publicIPAddresses/', variables('azErGw').azErGwIpName)]",
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName, '/subnets/GatewaySubnet')]"
                                            ],
                                            "properties": {
                                                "gatewayType": "ExpressRoute",
                                                "ipConfigurations": [
                                                    {
                                                        "name": "default",
                                                        "properties": {
                                                            "privateIPAllocationMethod": "Dynamic",
                                                            "subnet": {
                                                                "id": "[variables('azErGw').azErGwSubnetId]"
                                                            },
                                                            "publicIpAddress": {
                                                                "id": "[variables('azErGw').azErGwPipId]"
                                                            }
                                                        }
                                                    }
                                                ],
                                                "sku": {
                                                    "name": "Standard",
                                                    "tier": "Standard"
                                                }
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('enableAzFw'), 'Yes'), not(empty(parameters('subnetMaskForAzFw'))))]",
                                            "apiVersion": "2020-05-01",
                                            "type": "Microsoft.Network/publicIpAddresses",
                                            "name": "[variables('azFw').azFwIpName]",
                                            "location": "[parameters('location')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName, '/subnets/AzureFirewallSubnet')]"
                                            ],
                                            "sku": {
                                                "name": "Standard"
                                            },
                                            "properties": {
                                                "publicIPAllocationMethod": "Static"
                                            }
                                        },
                                        {
                                            "condition": "[and(equals(parameters('enableAzFw'), 'Yes'), not(empty(parameters('subnetMaskForAzFw'))))]",
                                            "apiVersion": "2020-05-01",
                                            "type": "Microsoft.Network/azureFirewalls",
                                            "name": "[variables('azFw').azFwName]",
                                            "location": "[parameters('location')]",
                                            "dependsOn": [
                                                "[concat('Microsoft.Network/publicIpAddresses/', variables('azFw').azFwIpName)]",
                                                "[concat('Microsoft.Network/virtualNetworks/', variables('azVnet').azVnetName, '/subnets/AzureFirewallSubnet')]"
                                            ],
                                            "properties": {
                                                "sku": {
                                                    "Name": "AZFW_VNet",
                                                    "Tier": "Standard"
                                                },
                                                "ipConfigurations": [
                                                    {
                                                        "name": "[variables('azFw').azFwIpName]",
                                                        "properties": {
                                                            "subnet": {
                                                                "id": "[variables('azFw').azFwSubnetId]"
                                                            },
                                                            "publicIPAddress": {
                                                                "id": "[variables('azFw').azFwPipId]"
                                                            }
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}