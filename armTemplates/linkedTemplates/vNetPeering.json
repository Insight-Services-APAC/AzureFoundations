{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "companyPrefix": {
            "type": "string",
            "maxLength": 5
        },
        "environmentPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "argPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "",
            "maxLength": 36
        },
        "enableSpoke": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "environmentTag": {
            "type": "string"
        },
        "ownerTag": {
            "type": "string"
        }
    },
    "variables": {
        "hub": {
            "vNet1Name": "sjt-syd-cor-vnt-10.49.0.0",
            "vNet1ResourceGroup": "sjt-cor-arg-network",
            "vNet1subscriptionId": "8f8224ca-1a9c-46d1-9206-1cf2a7c51de8",
            "vNet1AllowGWTransit": false
        },
        "spoke": {
            "vNet2Name": "sjt-syd-cor-vnt-10.49.0.0",
            "vNet2ResourceGroup": "sjt-cor-arg-network",
            "vNet2subscriptionId": "8f8224ca-1a9c-46d1-9206-1cf2a7c51de8",
            "vNet2UseRemoteGW": true
        },
        "vNet1tovNet2PeeringName": "[concat(variables('hub').vNet1Name, '-', variables('spoke').vNet2Name)]",
        "vNet2tovNet1PeeringName": "[concat(variables('spoke').vNet2Name, '-', variables('hub').vNet1Name)]",
        "vNet1Id": "[concat('/subscriptions/',variables('hub').vNet1subscriptionId,'/resourceGroups/',variables('hub').vNet1ResourceGroup,'/providers/Microsoft.Network/virtualNetworks/',variables('hub').vNet1Name)]",
        "vNet2Id": "[concat('/subscriptions/',variables('spoke').vNet2subscriptionId,'/resourceGroups/',variables('spoke').vNet2ResourceGroup,'/providers/Microsoft.Network/virtualNetworks/',variables('spoke').vNet2Name)]"
    },
    "resources": [
        {
            "condition": "[and(equals(parameters('enableSpoke'), 'Yes'), not(empty(parameters('subscriptionId'))))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "spokeVnetPeer",
            "location": "[deployment().location]",
            "subscriptionId": "[parameters('subscriptionId')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "apiVersion": "2017-05-10",
                            "name": "spoketohub",
                            "type": "Microsoft.Resources/deployments",
                            "resourceGroup": "[variables('spoke').vNet2ResourceGroup]",
                            "subscriptionId": "[variables('spoke').vNet2subscriptionId]",
                            "properties": {
                                "mode": "Incremental",
                                "template": {
                                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
                                    "contentVersion": "1.0.0.0",
                                    "parameters": {},
                                    "variables": {},
                                    "resources": [
                                        {
                                            "apiVersion": "2016-06-01",
                                            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
                                            "name": "[concat(variables('spoke').vNet2Name, '/',variables('vNet2tovNet1PeeringName'))]",
                                            "location": "[resourceGroup().location]",
                                            "properties": {
                                                "allowVirtualNetworkAccess": "true",
                                                "allowForwardedTraffic": "false",
                                                "allowGatewayTransit": "false",
                                                "useRemoteGateways": "[variables('spoke').vNet2UseRemoteGW]",
                                                "remoteVirtualNetwork": {
                                                    "id": "[variables('vNet1Id')]"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "apiVersion": "2017-05-10",
                            "name": "hubtospoke",
                            "type": "Microsoft.Resources/deployments",
                            "resourceGroup": "[variables('hub').vNet1ResourceGroup]",
                            "subscriptionId": "[variables('hub').vNet1subscriptionId]",
                            "properties": {
                                "mode": "Incremental",
                                "template": {
                                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
                                    "contentVersion": "1.0.0.0",
                                    "parameters": {},
                                    "variables": {},
                                    "resources": [
                                        {
                                            "apiVersion": "2016-06-01",
                                            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
                                            "name": "[concat(variables('hub').vNet1Name, '/',variables('vNet1tovNet2PeeringName'))]",
                                            "location": "[resourceGroup().location]",
                                            "properties": {
                                                "allowVirtualNetworkAccess": "true",
                                                "allowForwardedTraffic": "false",
                                                "allowGatewayTransit": "[variables('hub').vNet1AllowGWTransit]",
                                                "useRemoteGateways": "false",
                                                "remoteVirtualNetwork": {
                                                    "id": "[variables('vNet2Id')]"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}
