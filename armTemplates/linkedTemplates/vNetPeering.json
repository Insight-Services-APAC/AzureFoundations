{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "companyPrefix": {
            "type": "string",
            "maxLength": 5
        },
        "locationPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "environmentPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "argPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "vntPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "addressPrefix": {
            "type": "string",
            "metadata": {
                "displayName": "addressPrefix",
                "description": "Address prefix of the Application Landing Zone"
            }
        },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "",
            "maxLength": 36
        },
        "hubCompanyPrefix": {
            "type": "string",
            "maxLength": 5
        },
        "hubLocationPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "hubEnvironmentPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "hubArgPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "hubVntPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "hubAddressPrefix": {
            "type": "string",
            "metadata": {
                "displayName": "hubAddressPrefix",
                "description": "Address prefix of the Hub"
            }
        },
        "hubSubscriptionId": {
            "type": "string",
            "defaultValue": "",
            "maxLength": 36
        },
        "enableSpoke": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        }
    },
    "variables": {    
        "hubNamingPrefix": "[concat(parameters('hubCompanyPrefix'), '-', parameters('hubLocationPrefix'), '-', parameters('hubEnvironmentPrefix'))]",
        "hubVnetCidr": "[substring(parameters('hubAddressPrefix'),0,sub(length(parameters('hubAddressPrefix')), 3))]",
        "hubVnetName": "[toLower(concat(variables('hubNamingPrefix'), '-', parameters('hubVntPrefix'), '-', variables('hubVnetCidr')))]",
        "hubVnetRG": "[toLower(concat(parameters('hubCompanyPrefix'), '-', parameters('hubEnvironmentPrefix'), '-', parameters('hubArgPrefix'), '-network'))]",
        "hubVnetId": "[concat('/subscriptions/',parameters('hubSubscriptionId'),'/resourceGroups/',variables('hubVnetRG'),'/providers/Microsoft.Network/virtualNetworks/',variables('hubVnetName'))]",
        "hubVnetToSpokeVnetPeeringName": "[concat(variables('hubVnetName'), '-to-', variables('spokeVnetName'))]",

        "spokeNamingPrefix": "[concat(parameters('companyPrefix'), '-', parameters('locationPrefix'), '-', parameters('environmentPrefix'))]",
        "spokeVnetCidr": "[substring(parameters('addressPrefix'),0,sub(length(parameters('addressPrefix')), 3))]",
        "spokeVnetName": "[toLower(concat(variables('spokeNamingPrefix'), '-', parameters('vntPrefix'), '-', variables('spokeVnetCidr')))]",
        "spokeVnetRG": "[toLower(concat(parameters('companyPrefix'), '-', parameters('environmentPrefix'), '-', parameters('argPrefix'), '-network'))]",
        "spokeVnetId": "[concat('/subscriptions/',parameters('subscriptionId'),'/resourceGroups/',variables('spokeVnetRG'),'/providers/Microsoft.Network/virtualNetworks/',variables('spokeVnetName'))]",
        "spokeVnetToHubVnetPeeringName": "[concat(variables('spokeVnetName'), '-to-', variables('hubVnetName'))]"
    },
    "resources": [
        {
            "condition": "[and(equals(parameters('enableSpoke'), 'Yes'), not(empty(parameters('subscriptionId'))))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "spokePeer",
            "location": "[deployment().location]",
            "subscriptionId": "[parameters('subscriptionId')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "Microsoft.Resources/deployments",
                            "apiVersion": "2020-06-01",
                            "name": "spoke-hub",
                            "resourceGroup": "[variables('spokeVnetRG')]",
                            "properties": {
                                "mode": "Incremental",
                                "template": {
                                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
                                    "contentVersion": "1.0.0.0",
                                    "parameters": {},
                                    "variables": {},
                                    "resources": [
                                        {
                                            "apiVersion": "2020-05-01",
                                            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
                                            "name": "[concat(variables('spokeVnetName'), '/',variables('spokeVnetToHubVnetPeeringName'))]",
                                            "location": "[deployment().location]",
                                            "properties": {
                                                "allowVirtualNetworkAccess": true,
                                                "allowForwardedTraffic": false,
                                                "allowGatewayTransit": false,
                                                "useRemoteGateways": false,
                                                "remoteVirtualNetwork": {
                                                    "id": "[variables('hubVnetId')]"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        },
        {
            "condition": "[and(equals(parameters('enableSpoke'), 'Yes'), not(empty(parameters('subscriptionId'))))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "hubPeer",
            "location": "[deployment().location]",
            "subscriptionId": "[parameters('hubSubscriptionId')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "Microsoft.Resources/deployments",
                            "apiVersion": "2020-06-01",
                            "name": "hub-spoke",
                            "resourceGroup": "[variables('hubVnetRG')]",
                            "properties": {
                                "mode": "Incremental",
                                "template": {
                                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
                                    "contentVersion": "1.0.0.0",
                                    "parameters": {},
                                    "variables": {},
                                    "resources": [
                                        {
                                            "apiVersion": "2020-05-01",
                                            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
                                            "name": "[concat(variables('hubVnetName'), '/',variables('hubVnetToSpokeVnetPeeringName'))]",
                                            "location": "[deployment().location]",
                                            "properties": {
                                                "allowVirtualNetworkAccess": true,
                                                "allowForwardedTraffic": false,
                                                "allowGatewayTransit": false,
                                                "useRemoteGateways": false,
                                                "remoteVirtualNetwork": {
                                                    "id": "[variables('spokeVnetId')]"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}
