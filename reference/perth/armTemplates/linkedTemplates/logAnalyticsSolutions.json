{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "companyPrefix": {
            "type": "string",
            "maxLength": 5
        },
        "locationPrefix": {
            "type": "string",
            "maxLength": 5
        },
        "environmentPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "argPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "omsPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "subscriptionId": {
            "type": "string"
        },
        "enableSecuritySolution": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableAgentHealth": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableChangeTracking": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableUpdateMgmt": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableActivityLog": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableAntiMalware": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableVmInsights": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableServiceMap": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableSqlAssessment": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "enableKeyVaultAnalytics": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "defaultValue": "Yes"
        },
        "subscriptionTag": {
            "type": "string"
        },
        "ownerTag": {
            "type": "string"
        },
        "costCenterTag": {
            "type": "string"
        }
    },
    "variables": {
        "deploymentName": "[take(concat(deployment().name, '-monSolutions'), 64)]",
        "namingPrefix": "[concat(parameters('companyPrefix'), '-', parameters('locationPrefix'), '-', parameters('environmentPrefix'))]",
        "resourceGroupName": "[toLower(concat(variables('namingPrefix'), '-', parameters('argPrefix'), '-monitoring'))]",
        "logAnalytics": {
            "name": "[toLower(take(concat(variables('namingPrefix'), '-', parameters('omsPrefix'), '-', guid(parameters('companyPrefix'))), 24))]",
            "resourceId": "[toLower(concat('/subscriptions/', parameters('subscriptionId'), '/resourceGroups/', variables('resourceGroupName'), '/providers/Microsoft.OperationalInsights/workspaces/', variables('logAnalytics').name))]"
        },
        "solutions": {
            "security": {
                "name": "[concat('Security', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "Security"
            },
            "agentHealth": {
                "name": "[concat('AgentHealthAssessment', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "AgentHealthAssessment"
            },
            "changeTracking": {
                "name": "[concat('ChangeTracking', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "ChangeTracking"
            },
            "updateMgmt": {
                "name": "[concat('Updates', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "Updates"
            },
            "azureActivity": {
                "name": "[concat('AzureActivity', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "AzureActivity"
            },
            "sqlAssessment": {
                "name": "[concat('SQLAssessment', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "SQLAssessment"
            },
            "antiMalware": {
                "name": "[concat('AntiMalware', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "AntiMalware"
            },
            "vmInsights": {
                "name": "[concat('VMInsights', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "VMInsights"
            },
            "serviceMap": {
                "name": "[concat('ServiceMap', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "ServiceMap"
            },
            "securityInsights": {
                "name": "[concat('SecurityInsights', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "SecurityInsights"
            },
            "KeyVaultAnalytics": {
                "name": "[concat('KeyVaultAnalytics', '(', variables('logAnalytics').name, ')')]",
                "marketplaceName": "KeyVaultAnalytics"
            }
        },
        "apiVersions": {
            "deployments": "2020-06-01",
            "resourceGroups": "2020-06-01",
            "locks": "2016-09-01",
            "operationsManagementSolutions": "2015-11-01-preview"
        },
        "tags": {
            "environment": "[parameters('subscriptionTag')]",
            "owner": "[parameters('ownerTag')]",
            "costCenter": "[parameters('costCenterTag')]"
        }
    },
    "resources": [
        // Create Resource Group
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "[variables('apiVersions').resourceGroups]",
            "location": "[deployment().location]",
            "name": "[variables('resourceGroupName')]",
            "tags": {
                "environment": "[variables('tags').environment]",
                "owner": "[variables('tags').owner]",
                "costCenter": "[variables('tags').costCenter]"
            },
            "properties": {}
        },
        // Nested deployment for Log Analytics Solutions
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersions').deployments]",
            "name": "[variables('deploymentName')]",
            "resourceGroup": "[variables('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        // Deploy Resource Group Lock
                        {
                            "type": "Microsoft.Authorization/locks",
                            "apiVersion": "[variables('apiVersions').locks]",
                            "name": "ResourceGroup-DontDelete",
                            "properties": {
                                "level": "CanNotDelete",
                                "notes": "Prevent deletion of the resourceGroup"
                            }
                        },
                        // Log Analytics Solution for Agent Health
                        {
                            "condition": "[equals(parameters('enableAgentHealth'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').agentHealth.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').agentHealth.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').agentHealth.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        },
                        // Log Analytics Solution for AntiMalware
                        {
                            "condition": "[equals(parameters('enableAntiMalware'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').antiMalware.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').antiMalware.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').antiMalware.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        },
                        // Log Analytics Solution for Azure Activity Logs
                        {
                            "condition": "[equals(parameters('enableActivityLog'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').azureActivity.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').azureActivity.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').azureActivity.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        },
                        // Log Analytics Solution for Change Tracking
                        {
                            "condition": "[equals(parameters('enableChangeTracking'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').changeTracking.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').changeTracking.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').changeTracking.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        },
                        // Log Analytics Solution for VM Insights
                        {
                            "condition": "[equals(parameters('enableVmInsights'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').vmInsights.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').vmInsights.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').vmInsights.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        },
                        // Log Analytics Solution for Security
                        {
                            "condition": "[equals(parameters('enableSecuritySolution'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').security.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').security.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').security.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        },
                        // Log Analytics Solution for Security Insights
                        {
                            "condition": "[equals(parameters('enableSecuritySolution'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').securityInsights.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').securityInsights.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').securityInsights.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        },
                        // Log Analytics Solution for Service Map
                        {
                            "condition": "[equals(parameters('enableServiceMap'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').serviceMap.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').serviceMap.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').serviceMap.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        },
                        // Log Analytics Solution for SQL Assessment
                        {
                            "condition": "[equals(parameters('enableSqlAssessment'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').sqlAssessment.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').sqlAssessment.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').sqlAssessment.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        },
                        // Log Analytics Solution for Update Management
                        {
                            "condition": "[equals(parameters('enableUpdateMgmt'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').updateMgmt.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').updateMgmt.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').updateMgmt.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        },
                        // Log Analytics Solution for Key Vault Analytics
                        {
                            "condition": "[equals(parameters('enableKeyVaultAnalytics'), 'Yes')]",
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "name": "[variables('solutions').KeyVaultAnalytics.name]",
                            "location": "[deployment().location]",
                            "properties": {
                                "workspaceResourceId": "[variables('logAnalytics').resourceId]"
                            },
                            "plan": {
                                "name": "[variables('solutions').KeyVaultAnalytics.name]",
                                "product": "[concat('OMSGallery/', variables('solutions').KeyVaultAnalytics.marketplaceName)]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {}
}