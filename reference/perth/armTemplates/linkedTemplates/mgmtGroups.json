{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/tenantDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "companyPrefix": {
            "type": "string",
            "maxLength": 5,
            "metadata": {
                "description": "Provide the company identifier prefix (max 5 characters)"
            }
        },
        "landingzonesMgs": {
            "type": "array",
            "defaultValue": [
                "production",
                "nonProduction"
            ],
            "metadata": {
                "description": "These are the child Management Groups under the App Landing Zone Management Group."
            }
        }
    },
    "variables": {
        "managementGroups": {
            "platform": "[concat(parameters('companyPrefix'), '-', 'platform')]",
            "landingzones": "[concat(parameters('companyPrefix'), '-', 'landingzones')]",
            "decommissioned": "[concat(parameters('companyPrefix'), '-', 'decommissioned')]",
            "sandbox": "[concat(parameters('companyPrefix'), '-', 'sandbox')]"
        },
        "apiVersions": {
            "managementGroups": "2020-05-01"
        }
    },
    "resources": [
        {
            // Create top level management group under the tenant root
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "[variables('apiVersions').managementGroups]",
            "name": "[parameters('companyPrefix')]",
            "properties": {}
        },
        {
            // Create management group for the platform
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "[variables('apiVersions').managementGroups]",
            "name": "[variables('managementGroups').platform]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups', parameters('companyPrefix'))]"
            ],
            "properties": {
                "details": {
                    "parent": {
                        "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('companyPrefix'))]"
                    }
                }
            }
        },
        {
            // Create management group for app landing zones
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "[variables('apiVersions').managementGroups]",
            "name": "[variables('managementGroups').landingzones]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('companyPrefix'))]"
            ],
            "properties": {
                "displayName": "[variables('managementGroups').landingzones]",
                "details": {
                    "parent": {
                        "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('companyPrefix'))]"
                    }
                }
            }
        },
        {
            // Create management group for sandbox subscriptions
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "[variables('apiVersions').managementGroups]",
            "name": "[variables('managementGroups').sandbox]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('companyPrefix'))]"
            ],
            "properties": {
                "displayName": "[variables('managementGroups').sandbox]",
                "details": {
                    "parent": {
                        "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('companyPrefix'))]"
                    }
                }
            }
        },
        {
            // Create management group for decommissioned subscriptions
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "[variables('apiVersions').managementGroups]",
            "name": "[variables('managementGroups').decommissioned]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('companyPrefix'))]"
            ],
            "properties": {
                "displayName": "[variables('managementGroups').decommissioned]",
                "details": {
                    "parent": {
                        "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('companyPrefix'))]"
                    }
                }
            }
        },
        {
            // Create child management groups for app landing zones
            "condition": "[not(empty(parameters('landingzonesMgs')))]",
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "[variables('apiVersions').managementGroups]",
            "name": "[concat(parameters('companyPrefix'), '-', parameters('landingzonesMgs')[copyIndex()])]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', variables('managementGroups').landingzones)]"
            ],
            "copy": {
                "name": "lzMgCopy",
                "count": "[length(parameters('landingzonesMgs'))]"
            },
            "properties": {
                "displayName": "[concat(parameters('companyPrefix'), '-', parameters('landingzonesMgs')[copyIndex()])]",
                "details": {
                    "parent": {
                        "id": "[tenantResourceId('Microsoft.Management/managementGroups/', variables('managementGroups').landingzones)]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}