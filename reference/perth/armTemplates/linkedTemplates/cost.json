{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/tenantDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "companyPrefix": {
            "type": "string",
            "maxLength": 5
        },
        "locationPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "environmentPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "argPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "omsPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "aaaPrefix": {
            "type": "string",
            "maxLength": 3
        },
        "subscriptionId": {
            "type": "string",
            "maxLength": 36
        }
    },
    "variables": {
        "policyDefinitions": {
            "deployBudget": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('companyPrefix'), '/providers/Microsoft.Authorization/policyDefinitions/Deploy-Budget')]"
        },
        "policyAssignmentNames": {
            "deployBudget": "Deploy-Budget"
        },
        "rbacOwner": "8e3af657-a8ff-443c-a75c-2fe8c4bcb635",
        "roleAssignmentNames": {
            "deployBudget": "[guid(concat(parameters('companyPrefix'), variables('policyAssignmentNames').deployBudget))]"
        },
        "resourceDeploymentName": "[take(concat('logAnalytics', '-', deployment().location, '-', guid(parameters('companyPrefix'))), 64)]",
        "namingPrefix": "[concat(parameters('companyPrefix'), '-', parameters('locationPrefix'), '-', parameters('environmentPrefix'))]",
        "budgetName": "[toLower(concat(parameters('subscriptionId'), '-Budget'))]",
        "apiVersions": {
            "deployments": "2020-06-01",
            "policyAssignments": "2020-03-01",
            "roleAssignments": "2020-04-01-preview"
        }
    },
    "resources": [
        // Conditional assignment of Azure Policy to deploy Log Analytics and Azure Automation
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "[variables('apiVersions').policyAssignments]",
            "name": "[variables('policyAssignmentNames').deployBudget]",
            "location": "[deployment().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "description": "[variables('policyAssignmentNames').deployBudget]",
                "displayName": "[variables('policyAssignmentNames').deployBudget]",
                "policyDefinitionId": "[variables('policyDefinitions').deployBudget]",
                "scope": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('companyPrefix'))]",
                "parameters": {
                    "budgetName": {
                        "value": "[variables('budgetName')]"
                    }
                }
            }
        },
        // Role assignment for the conditional Log Analytics policy assignment
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "[variables('apiVersions').roleAssignments]",
            "name": "[variables('roleAssignmentNames').deployBudget]",
            "dependsOn": [
                "[variables('policyAssignmentNames').deployBudget]"
            ],
            "properties": {
                "principalType": "ServicePrincipal",
                "roleDefinitionId": "[concat('/providers/Microsoft.Authorization/roleDefinitions/', variables('rbacOwner'))]",
                "principalId": "[toLower(reference(concat('/providers/Microsoft.Authorization/policyAssignments/', variables('policyAssignmentNames').deployBudget), '2018-05-01', 'Full' ).identity.principalId)]"
            }
        },
        // Conditional deployment for Azure Budget
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersions').deployments]",
            "name": "[variables('resourceDeploymentName')]",
            "location": "[deployment().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Authorization/roleAssignments/', variables('roleAssignmentNames').deployBudget)]"
            ],
            "subscriptionId": "[parameters('subscriptionId')]",
            "properties": {
                "mode": "incremental",
                "template": "[reference(variables('policyDefinitions').deployBudget, '2018-05-01').policyRule.then.details.deployment.properties.template]",
                "parameters": "[reference(concat('/providers/Microsoft.Management/managementGroups/', parameters('companyPrefix'), '/providers/Microsoft.Authorization/policyAssignments/', variables('policyAssignmentNames').deployBudget), '2018-05-01').parameters]"
            }
        }
    ],
    "outputs": {}
}